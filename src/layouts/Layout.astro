---
import Footer from "../components/Footer.astro";
import Heading from "../components/Heading.astro";
import Navigetion from "../components/Navigation.astro";
import "../styles/global.css";
const { pageTitle } = Astro.props as { pageTitle?: string };
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- noindex -->
    <meta name="robots" content="noindex,nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" /><link
      rel="sitemap"
      href="/sitemap-index.xml"
    />
    <meta name="generator" content={Astro.generator} />
    <title>
      {pageTitle ? `${pageTitle} - 社会福祉法人 青和会` : "社会福祉法人 青和会"}
    </title>
  </head>
  <body>
    <div
      class="flex flex-col max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 bg-white rounded-2xl shadow-lg my-8"
    >
      <h1 class="font-bold my-8 text-gray-600">
        <span class="text-2xl">社会福祉法人</span>
        <span class="text-4xl">青和会</span>
      </h1>
      <Navigetion />
      {pageTitle && <Heading level={2}>{pageTitle}</Heading>}
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: darkseagreen;
  }
</style>
