---
// 見出しコンポーネント
// level: 見出しレベル (2, 3, 4)
const { level } = Astro.props as {
  level: 2 | 3 | 4;
};
---

{
  level === 2 && (
    <h2 class="text-2xl font-extrabold my-6 pl-3 border-l-6 border-emerald-500 bg-gradient-to-r from-emerald-100 to-transparent rounded-md py-2">
      <span class="text-emerald-700">
        <slot />
      </span>
    </h2>
  )
}
{
  level === 3 && (
    <h3 class="text-xl font-semibold my-5 pl-3 border-l-4 border-emerald-400 bg-gradient-to-r from-emerald-50 to-transparent rounded py-2">
      <span class="text-emerald-600">
        <slot />
      </span>
    </h3>
  )
}
{
  level === 4 && (
    <h4 class="text-lg font-medium my-4 pl-3 border-l-4 border-emerald-300 text-emerald-700 py-2">
      <slot />
    </h4>
  )
}
